{
    "name": "MUSCLE5 Alignment Tool",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.9"
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && chmod +x *.py",
    "postStartCommand": "echo 'ðŸ§¬ MUSCLE5 Alignment Tool is ready. Run: python codespaces_start.py'",
    "forwardPorts": [7860],
    "portsAttributes": {
        "7860": {
            "label": "MUSCLE5 Web Interface",
            "onAutoForward": "openPreview"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "args": ["-l"]
                    }
                },
                "workbench.startupEditor": "none",
                "terminal.integrated.gpuAcceleration": "off"
            }
        }
    },
    "remoteUser": "vscode"
}
